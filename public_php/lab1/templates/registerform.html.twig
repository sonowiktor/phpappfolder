{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h3>{{ page_heading_2 }}</h3>
        <form action="{{ action1 }}" method="post">
            <fieldset>
                <legend>User details</legend>
                {% if(error != false) %}
                    <p class="error">{{ error }}</p>
                {% else %}
                    <br>
                {% endif %}
                <br>
                <form method="post" action="{{ path('register') }}">
                    <label for="username">Enter your username:</label><br>
                    <input type="text" id="username" name="username" value="{{ initial_input_box_value }}"><br>
                    <label for="email">Enter your email:</label><br>
                    <input type="email" id="email" name="email" value="{{ initial_input_box_value }}"><br>
                    <label for="password">Enter your password:</label><br>
                    <input type="password" id="password" name="password" value="{{ initial_input_box_value }}"><br>
                    <label for="confirm_password">Confirm your password:</label><br>
                    <input type="password" id="confirm_password" name="confirm_password" value="{{ initial_input_box_value }}"><br><br>
                    <input type="submit" value="Register">
                </form>
            </fieldset>
        </form>

    </div>
{% endblock %}